set -e -u
prog=${0##*/}
bad_usage()
{
    printf 'Usage: %s PROVIDER IDENT\n' "$prog" >&2
    printf 'Providers: inpost\n' >&2
    exit 1

}
[ $# -eq 2 ] || bad_usage
provider="$1"
ident="$2"
case $provider in
    inpost)
        url="https://api-shipx-pl.easypack24.net/v1/tracking/$ident"
        json=$(curl --silent --fail --show-error "$url")
        jq . <<< "$json"
        ;;
    *)
        bad_usage;;
esac

# vim:ts=4 sts=4 sw=4 et
